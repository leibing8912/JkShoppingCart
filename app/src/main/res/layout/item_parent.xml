<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_normal_parent"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical"
    android:background="@color/color_white">
    <!-- 组选 -->
    <CheckBox
        android:id="@+id/cb_parent_item"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:button="@drawable/selector_check_box_round_blue"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <!-- 组名称 -->
    <TextView
        android:id="@+id/tv_parent_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/text_color_black2"
        android:layout_marginLeft="10dp"
        android:text="健客自营"/>
    <!-- 右布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical">
        <TextView
            android:id="@+id/tv_right_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_black3"
            android:text="已免运费" />
        <ImageView
            android:id="@+id/iv_right_item"
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:background="@color/colorAccent"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>
