<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <!-- 优惠金额 -->
    <TextView
        android:id="@+id/tv_discount_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/text_color_black2"
        android:text="累计金额：￥0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <!-- 确认按钮 -->
    <Button
        android:id="@+id/btn_discount_amount_ok"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="15sp"
        android:background="@drawable/selector_btn_red"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="确定"/>
    <!-- 重置按钮 -->
    <Button
        android:id="@+id/btn_discount_amount_reset"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="15sp"
        android:background="@drawable/selector_btn_white"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_discount_amount_ok"
        android:layout_marginRight="12dp"
        android:text="重置"/>
</RelativeLayout>
