<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp">
        <!-- 单品图片 -->
        <ImageView
            android:id="@+id/iv_award_product_pic"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:scaleType="fitXY"
            android:src="@drawable/two_health_drug_pic1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"/>
        <!-- 单品名称、规格 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 单品名称 -->
            <TextView
                android:id="@+id/tv_award_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color_black3"
                android:text="单品单品单品单品单品单品单品单品单品"/>
            <!-- 规格 -->
            <TextView
                android:id="@+id/tv_award_product_specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_common_lighted"
                android:layout_marginTop="12dp"
                android:text="规格：11ml"/>
            <!-- 积分兑换 or 奖品 -->
            <!-- 积分兑换 -->
            <ImageView
                android:id="@+id/iv_order_info_credits_exchange"
                android:layout_width="42dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:layout_marginTop="4dp"
                android:src="@drawable/shoppingcart_new_credits_exchange"
                android:visibility="gone"/>
            <!-- 奖品 -->
            <ImageView
                android:id="@+id/iv_order_info_award"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:layout_marginTop="4dp"
                android:src="@drawable/shoppingcart_new_prize" />
        </LinearLayout>
        <!-- 价格、数量 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">
            <!-- 价格 -->
            <TextView
                android:id="@+id/tv_award_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color_black3"
                android:text="￥58.0"/>
            <!-- 数量 -->
            <TextView
                android:id="@+id/tv_award_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_black3"
                android:layout_marginTop="5dp"
                android:text="x1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
