<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">
        <!-- 单品图片 -->
        <ImageView
            android:id="@+id/iv_sku_product_pic"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:scaleType="fitXY"
            android:src="@drawable/two_health_drug_pic1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"/>
        <!-- 单品名称、规格 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 单品名称 -->
            <TextView
                android:id="@+id/tv_sku_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color_black3"
                android:text="单品单品单品单品单品单品单品单品单品"/>
            <!-- 规格 -->
            <TextView
                android:id="@+id/tv_sku_product_specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_common_lighted"
                android:layout_marginTop="12dp"
                android:text="规格：11ml"/>
        </LinearLayout>
        <!-- 价格、数量 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">
            <!-- 价格 -->
            <TextView
                android:id="@+id/tv_sku_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color_black3"
                android:text="￥58.0"/>
            <!-- 数量 -->
            <TextView
                android:id="@+id/tv_sku_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color_black3"
                android:layout_marginTop="5dp"
                android:text="x1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
