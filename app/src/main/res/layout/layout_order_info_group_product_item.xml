<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="5dp"
    android:paddingRight="15dp">
    <!-- 组合子商品图片 -->
    <ImageView
        android:id="@+id/iv_group_item_product_pic"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/two_health_drug_pic1"/>
    <!-- 商品名称、规格 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_group_item_product_pic"
        android:orientation="vertical">
        <!-- 商品名称 -->
        <TextView
            android:id="@+id/tv_group_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_black3"
            android:text="套装子商品套装子商品"/>
        <!-- 规格 -->
        <TextView
            android:id="@+id/tv_group_item_product_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_common_lighted"
            android:text="规格：10ml"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
    <!-- 价格、数量 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:gravity="right">
        <!-- 价格 -->
        <TextView
            android:id="@+id/tv_group_item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_black3"
            android:text="￥25.20"/>
        <!-- 数量 -->
        <TextView
            android:id="@+id/tv_group_item_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_black3"
            android:text="x1"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</RelativeLayout>
