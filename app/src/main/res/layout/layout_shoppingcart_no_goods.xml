<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_no_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:visibility="gone">
    <!-- 无商品图 -->
    <ImageView
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:scaleType="fitXY"
        android:src="@drawable/shoppingcart_new_searchpage_dajian"
        android:layout_marginTop="149dp"/>
    <!-- 文案 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_black3"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:text="您的购物车还是空的"/>
    <!-- 文案 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color_common_lighted"
        android:text="选几件必备的东西吧！"
        android:layout_marginTop="8dp"/>
    <!-- 去逛一逛 -->
    <Button
        android:id="@+id/btn_go_shop"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textSize="14sp"
        android:textColor="@color/color_white"
        android:text="去逛一逛"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_blue"/>
</LinearLayout>
